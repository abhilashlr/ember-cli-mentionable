{{textarea
    classNames=elementClassNames
    type=type
    value=value
    placeholder=placeholder
    name=name
    aria-label=ariaLabel
    disabled=disabled
    autofocus=autofocus
    tabindex=tabindex
    required=required
    maxlength=maxlength
    focus-in=(action "didFocusIn")
    focus-out=(action "didFocusOut")
    key-down=(action "didKeyDown")
    key-up=(action "didKeyUp")
    key-press=(action "didKeyPress")
    insert-newline=(action "didInsertNewline")
    enter=(action "didPressEnter")
    escape-press=(action "didPressEscape")
    input=(action "didInput")
}}
